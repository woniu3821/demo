@import './variable.styl';
body {
    background-color: #f4f6f8;
    font-family: PingFang ExtraLight, Microsoft YaHei, -apple-system, BlinkMacSystemFont, Helvetica Neue, PingFang SC, Source Han Sans SC, Noto Sans CJK SC, WenQuanYi Micro Hei, sans-serif;
}

.ivu-page-item-active {
    background: @btn-primary-color;
    a {
        color: #fff;
    }
    &:hover a {
        color: #fff;
    }
}

.ivu-btn-text {
    color: @btn-primary-color;
    &:hover {
        background-color: transparent;
    }
    &:focus {
        box-shadow: 0 0 0;
    }
}

.ivu-table td,
.ivu-table th {
    height: 41px;
}

.ivu-table td .ivu-btn-text {
    padding: 0 6px;
}

.ivu-table-cell {
    padding: 0 12px;
}

.ivu-select-item-focus {
    background-color: @select-seleted-color;
    &:hover {
        background-color: @select-seleted-color;
    }
}

.ivu-form .ivu-form-item-label{
    text-align:left;
    font-weight: 600;
    line-height: 17px;
    padding-top:8px;
    padding-bottom:7px;
}
.ivu-form-item{
    margin-bottom:20px;
}

.ivu-radio-wrapper{
    margin-right: 20px;
}

.ivu-tag-border{
    height: 21px;
    line-height: 19px;
    padding:0 11px;
    border-radius: 4px;
}
.ivu-spin-fix{
    z-index: 1001;
}
textarea.ivu-input{
    font-size: 12px;
}

.ivu-form-item-error .ivu-upload{
    border-color:#ed4014
}